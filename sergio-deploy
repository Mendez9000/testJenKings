pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'echo "Hello World"'
                sh '''
                    echo "Multiline shell steps works too"
                    ls -lah
                '''
            }
        }
    }
    post {
        always {
            echo 'Siempre'
        }
        success {
            echo 'Exito'
        }
        failure {
            echo 'Fallo'
        }
        unstable {
            echo Raro'
        }
        changed {
            echo 'Cambiado'
        }
    }
 }
